<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
<% books.each do |book| %>
      <tr>
        <%= link_to book_path(book.id) do %>
          <%= image_tag book.get_image %>
        <% end %>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
<% end %>
        
    </tbody>
    
  </table>
  
  <%= paginate books %>