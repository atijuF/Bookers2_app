<h2>Book detail</h2>

<table>
    <thead>
      <tr>
        <th colspan="3"></th>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
<% @books.each do |book| %>
      <tr>
        <%= image_tag book.get_image %>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <!--ここにユーザー名を入れる、参照12章-->
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <td>
          <!-- if文挿入 -->
           <%= link_to "Edit", edit_book_path(book.id) %></td>
        <td>
          <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
          <% end %>
        </td>
        
      </tr>
<% end %>
        
    </tbody>
    
  </table>