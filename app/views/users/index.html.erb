<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/sidebar', user: @user %>
      <%= render 'books/sidebar', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Image</th>
              <th scope="col">Name</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
      <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
      <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>